<%layout('/layout') %>

        
        




<div class="row">
  <h1 class="text-center">Edit campground  </h1>

  <div class="col-6 offset-3">
    <form action="/campgrounds/<%=camp._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data" >

    <div class="mt-3">
<label class=" form-label " for="title">Title</label>
<input class=" form-control" type="text" name="camp[title]" id="title" value="<%=camp.title %>" required>
</div>
  <div class="mt-3">
<label for="location" class="form-label">location</label>
<input type="text" class="form-control" name="camp[location]" id="location" value="<%=camp.location %>" required>
</div>
  <div class="mt-3">
<label for="image" class="form-label">Image Url</label>
<input type="file" class="form-control" name="image" id="image" multiple>
</div>


<div class="mt-3">
<label for="description" class="form-label">Description</label>
<textarea type="text" class="form-control" name="camp[description]" id="description"   required><%=camp.description%></textarea> 
</div>

<div class="mt-3">
      <label for="price" class="form-label">Price</label>

  <div class="input-group">


      <span class="input-group-text">$</span>

<input type="number" class="form-control" name="camp[price]" id="price"  value="<%=camp.price %>" required>
</div>
</div>


<div class="text-center mt-3">

  
<button class="btn btn-primary mt-3">Edit campground</button>

  </div>
  

  <div class="mb-3">
  <%camp.images.forEach(function(img,i){ %>
    <img src="<%=img.url%>" class="img-thumbnail">  
<div class="form-check-inline">
<input type="checkbox" name="deleteImages[]" id="image-<%=i%>" value="<%=img.filename%>">  >
</div>
  <label for="image-<%=i%>">Delete?</label>

<% }) %>
  </div>

  <div class="text-center mt-3">
    <a href="/campgrounds/<%= camp._id  %>" class="btn btn-primary">Back</a>

  </div>
    
</form>
</div>

</div>